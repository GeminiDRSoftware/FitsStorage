[Unit]
Description=Fits Copy From DHS
After=syslog.target network.target postgresql.service

[Service]
Environment=PYTHONPATH=/opt/FitsStorage
User=fitsdata
Group=geminidata
ExecStart=python3 /opt/FitsStorage/fits_storage/scripts/copy_from_dhs.py --debug --demon
Restart=always
# This will force the system to wait 10 seconds before respawning
RestartSec=10
# Make sure that we're using the right umask for the files that are copied
# to storage_root. Otherwise, SOS have no write access to them.
UMask=0002

[Install]
WantedBy=multi-user.target
