[Unit]
Description=Fits Service Preview Queue 1
After=syslog.target network.target postgresql.service

[Service]
Environment=PYTHONPATH=/opt/FitsStorage
User=fitsdata
ExecStart=python3 /opt/FitsStorage/fits_storage/scripts/service_preview_queue.py --demon --debug --lockfile --name=1
Restart=always
# This will force the system to wait 10 seconds before respawning
RestartSec=10

[Install]
WantedBy=multi-user.target
