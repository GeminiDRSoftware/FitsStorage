conditions:
  - matching(pdu):
    - INSTRUME:  TReCS

range limits:
  - DATEIMAG:      2003-6-1 .. *

import:   [ vis-pdu, ext, wcs ]

validation:
  - primary-hdu: trecs-pdu
  - extension:   trecs-ext

trecs-pdu:
  - merge: vis-pdu
  - maybe-merge: wcs
  - keywords:
    - OBJECT
    - OBSTYPE
    - TRKEQUIN:
      - float:       1950.0 .. 2000.0
    - UT
    - TIME-OBS
    - UTSTART
    - UTEND
    - FILTER1
    - FILTER2
    - GRATING
    - PUPILIMA

trecs-ext:
  - merge: ext.image
  - keywords:
    - AXISLAB3
    - AXISLAB4
