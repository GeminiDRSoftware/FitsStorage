conditions:
  - matching:
    - INSTRUME:   NICI

import: [ fac-pdu, ext, wcs ]

validation:
  - primary-hdu: nici-pdu
  - extension  : nici-blue|nici-red

nici-pdu:
  - merge: fac-pdu
  - keywords:
   - BIAS_B
   - BIAS_R
   - DICHROIC
   - FILTER_B
   - FILTER_R
   - FRAME
   - FOCS
   - FPMW
   - MODE_B
   - MODE_R
   - NDFW
   - PMW
   - TIME-OBS
   - TTSM
   - UTEND

nici-blue:
  - merge: image
  - conditions:
   - matching:
     - CHANNEL:    BLUE
  - maybe-merge: wcs

nici-red:
  - merge: image
  - conditions:
   - matching:
     - CHANNEL:    RED
  - maybe-merge: wcs
