[Unit]
Description=Fits Storage API Backend
After=syslog.target network.target

[Service]
Environment=PYTHONPATH=/opt/FitsStorage:/opt/DRAGONS:/opt/GeminiObsDB:/opt/GeminiCalMgr
User=fitsdata
ExecStart=/usr/bin/python3 /opt/FitsStorage/fits_storage/scripts/api_backend.py --demon
Restart=always
# This will force the system to wait one second before respawning
RestartSec=1

[Install]
WantedBy=multi-user.target
