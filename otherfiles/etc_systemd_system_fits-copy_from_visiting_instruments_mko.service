[Unit]
Description=Fits Copy From Visiting Instrument MKO
After=syslog.target network.target postgresql.service

[Service]
Environment=PYTHONPATH=/opt/FitsStorage:/opt/DRAGONS:/opt/FitsStorageDB:/opt/GeminiCalMgr
User=fitsdata
Group=geminidata
ExecStart=/usr/bin/python3 /opt/FitsStorage/fits_storage/scripts/copy_from_visiting_instrument.py --debug --demon --alopeke
Restart=always
# This will force the system to wait 10 seconds before respawning
RestartSec=10
# Make sure that we're using the right umask for the files that are copied
# to storage_root. Otherwise, SOS have no write access to them.
UMask=0002

[Install]
WantedBy=multi-user.target
